{
  "digest": {
    "font-family": "Helvetica, Arial, sans-serif",
    "font-size": "14pt",
    "color": "#000",
    "max-width": "800px",
    "margin": "0"
  },
  "link": {
    "text-decoration": "none",
    "color": "#4183c4"
  },
  "intro-paragraph": {
    "user-link": {
      "font-weight": "bold",
      "color": "#000"
    },
    "user-avatar": {
      "vertical-align": "bottom",
      "padding-right": "3px"
    }
  },
  "interval-header": {
    "font-size": "24pt",
    "font-weight": "bold",
    "margin": ".75em 0 .5em 0",
    "border-bottom": "dashed 2px #666"
  },
  "repository-header": {
    "font-size": "18pt",
    "font-weight": "bold",
    "margin": ".5em 0"
  },
  "commit": {
    "border-bottom": "dashed 1px #666",
    "margin": "20px 0",
    "font-size": "12pt",
    "title": {
      "padding": "8px 0",
      "margin": "0"
    },
    "message": {
      "margin": "0",
      "padding-botom": "8px",
      "white-space": "pre-wrap"
    },
    "footer": {
      "padding": "8px 0",
      "margin-bottom": "20px",
      "date": {
        "color": "#666"
      },
      "link": {
        "font-family": "monospace",
        "float": "right"
      }
    }
  }
}
